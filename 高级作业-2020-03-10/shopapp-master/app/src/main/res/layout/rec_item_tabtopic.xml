<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/img_tabtopic_pic"
        android:src="@drawable/man_02_pressed"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tx_tabtopic_title"
        android:layout_below="@id/img_tabtopic_pic"
        android:text="title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tx_tabtopic_subitle"
        android:layout_below="@id/tx_tabtopic_title"
        android:text="subtitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tx_tabtopic_pirce"
        android:layout_below="@id/tx_tabtopic_subitle"
        android:text="price"
        android:textColor="@color/colorAccent"/>
</RelativeLayout>